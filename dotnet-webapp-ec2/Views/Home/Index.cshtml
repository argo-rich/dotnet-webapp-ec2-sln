@using Northwind.EntityModels
@model List<Category>

@{
    ViewData["Title"] = "Home Page";
    string currentItem = "";
}

<div>
    <h1 class="display-4">Welcome to Northwind</h1>
    We are proud to be the global industry leader in supplying the restaurant industry.

<br />
@if (Model is not null)
{
        <div id="categories" class="carousel slide" data-bs-ride="carousel" data-bs-interval="3000" data-keyboard="true">
        <div class="carousel-inner">
            @for (int i = 0; i < Model.Count; i++)
            {
                currentItem = (i == 0) ? "active" : "";
                
                <div class="carousel-item @currentItem">
                    <img class="d-block w-100" src="~/images/category@(Model[i].CategoryId).jpeg" alt="@Model[i].CategoryName" />
                    <div class="carousel-caption d-none d-md-block">
                        <h2>@Model[i].CategoryName</h2>
                        <h5>@Model[i].Description</h5>
                        <p>
                            <a class="btn btn-primary" href="/Product/CategoryDetail/@Model[i].CategoryId">View</a>
                        </p>
                    </div>
                </div>
            }
        </div>
        <ol class="carousel-indicators">
            @for (int i = 0; i < Model.Count; i++)
            {
                currentItem = (i == 0) ? "active" : "";

                <li data-bs-target="#categories" data-bs-slide-to="@i" class="@currentItem"></li>
            }
        </ol>
        <a class="carousel-control-prev" href="#categories" role="button" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#categories" role="button" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
}
</div>